                android:id="@+id/stage1"
                android:layout_width="720px"
                android:layout_height="380px"
                android:background="@drawable/stage">

                <ImageView
                    android:id="@+id/book_1"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="115px"
                    android:layout_marginTop="43px"/>

                <ImageView
                    android:id="@+id/book_2"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="115px"
                    android:layout_marginTop="43px"/>
            </RelativeLayout>

