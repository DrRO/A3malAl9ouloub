    <ImageView
        android:id="@+id/new_back"
        android:layout_width="720px"
        android:layout_height="1280px"
        android:background="@drawable/bg_second_plan" />
    
    <ImageView
        android:id="@+id/img_cover_small"
        android:layout_width="196px"
        android:layout_height="274px" />
    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="720px"
        android:layout_height="1280px" 
