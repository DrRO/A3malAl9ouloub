<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1440px"
    android:layout_height="2560px"
    android:layout_gravity="center"
    android:id="@+id/principal_layout"
    android:background="@drawable/mainscreen_bg" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="1440px"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="1440px"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="1440px"
                android:layout_height="800px"
                android:background="@android:color/transparent" >
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/stage1"
                android:layout_width="1440px"
                android:layout_height="550px"
                android:background="@drawable/stage">

                <ImageView
                    android:id="@+id/book_1"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="200px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>

                <ImageView
                    android:id="@+id/book_2"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_1"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>
                
                 <ImageView
                    android:id="@+id/book_3"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_2"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>

                <ImageView
                    android:id="@+id/book_4"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_3"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>
                
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/stage2"
                android:layout_width="1440px"
                android:layout_height="550px"
                android:background="@drawable/stage">

                <ImageView
                    android:id="@+id/book_5"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="200px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>

                <ImageView
                    android:id="@+id/book_6"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_5"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>
                
                 <ImageView
                    android:id="@+id/book_7"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_6"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>

                <ImageView
                    android:id="@+id/book_8"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_7"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>
                
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/stage3"
                android:layout_width="1440px"
                android:layout_height="550px"
                android:background="@drawable/stage">

                <ImageView
                    android:id="@+id/book_9"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="200px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>

                <ImageView
                    android:id="@+id/book_10"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_9"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>
                
                 <ImageView
                    android:id="@+id/book_11"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_10"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>

                <ImageView
                    android:id="@+id/book_12"
                    android:layout_width="196px"
                    android:layout_height="274px"
                    android:layout_toLeftOf="@id/book_11"
                    android:layout_marginRight="90px"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="90px"/>
                
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/new_back"
        android:layout_width="1440px"
        android:layout_height="2560px"
        android:background="@drawable/bg_second_plan" />
    
    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="1440px"
        android:layout_height="2560px" 
        android:visibility="gone"/>

    <Button
        android:id="@+id/info"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="100px"
        android:background="@drawable/info_selector" />

</RelativeLayout>